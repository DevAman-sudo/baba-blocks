<!DOCTYPE html>
<html>

<head>
   {{>head}}
   <script src="https://kit.fontawesome.com/43dcc20e7a.js" crossorigin="anonymous"></script>
   <style>
      .search-box {
         width: 100%;
         display: flex;

      }

      .search-input {
         width: 100%;
         height: 4rem;
         padding: 10px;
         border: 4px solid #111d5e;
         border-radius: 10px 0 0 10px;
         border-right: none;
         outline: none;
         font-size: 20px;
         color: tomato;
         background: none;
      }

      .search-button {
         text-align: center;
         height: 4rem;
         width: 4rem;
         outline: none;
         cursor: pointer;
         border: 4px solid #111d5e;
         border-radius: 0 10px 10px 0;
         border-left: none;
         background: none;
         font-size: 2rem;
         border-left: 4px solid #111d5e;


      }
   </style>

</head>


<body class="sub_page">


{{>alert}}

   <div class="hero_area">
      <!-- header section strats -->
      {{>navbar}}
      <!-- end header section -->
   </div>

   <!-- product section -->
   <section class="product_section layout_padding">
      <div class="container">
         <div class="heading_container heading_center">
            <h2>
               Our <span>products</span>
            </h2>
         </div>

         <form action="#" method="post">
            <div class="container">
               <div class="search-box">
                  <input disabled type="text" name="search" class="search-input" placeholder="Search..">

                  <button class="search-button">
                     <i class="fas fa-search"></i>
                  </button>
               </div>
            </div>
         </form>

         <div class="row">

            {{#each doc}}
            <div class="col-sm-6 col-md-4 col-lg-4">
               <div class="box">
                  <div class="option_container">
                     <div class="options">

                        <form action="/details" method="get">
                           <input type="hidden" name="id" value="{{this._id}}">
                           <button type="submit" style="border: none; background: none;">
                              <a class="option2">
                                 View Details
                              </a>
                           </button>
                        </form>
                     </div>
                  </div>
                  <div class="img-box">
                     <img src="{{this.image}}">
                  </div>
                  <div class="detail-box">
                     <h5>
                        {{this.name}} {{this.size}}
                     </h5>
                     <h6>
                        Rs{{this.price}}
                     </h6>
                  </div>
               </div>
            </div>
            {{/each}}

         </div>
      </div>
   </section>
   <!-- end product section -->

   <!-- footer section -->
   {{>footer}}
   <!-- footer section -->
   <!-- jQery -->
   <script src="js/jquery-3.4.1.min.js"></script>
   <!-- popper js -->
   <script src="js/popper.min.js"></script>
   <!-- bootstrap js -->
   <script src="js/bootstrap.js"></script>
   <!-- custom js -->
   <script src="js/custom.js"></script>
</body>

</html>